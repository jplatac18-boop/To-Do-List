<todoApp name="To-Do List" version="1.0">

    <mainLayout id="mainLayout"
                alignment="center"
                maxWidth="800"
                backgroundColor="#FFFFFF"
                padding="32"
                borderRadius="16"
                shadow="medium">

        <headerSection id="headerSection" alignment="center">
            <appTitle id="appTitle"
                      text="To-Do List"
                      fontSize="28"
                      fontWeight="bold" />

            <appSubtitle id="appSubtitle"
                         text="Gestiona tus tareas personales, laborales o académicas de forma sencilla."
                         fontSize="14"
                         textAlign="center"
                         marginTop="8" />
        </headerSection>

        <taskInputSection id="taskInputSection" layout="row" marginTop="24">
            <taskDescriptionField id="taskDescriptionField"
                                  placeholder="Escribe una nueva tarea (máx. 200 caracteres)"
                                  required="true"
                                  maxLength="200"
                                  expand="true" />

            <addTaskButton id="addTaskButton"
                           text="Agregar"
                           style="primary"
                           marginLeft="12" />
        </taskInputSection>

        <inputHelperText id="inputHelperText"
                         text="Campo obligatorio. Máximo 200 caracteres."
                         fontSize="12"
                         color="#777777"
                         marginTop="4" />

        <statsSection id="statsSection"
                      layout="row"
                      marginTop="24"
                      gap="12">

            <statCard id="statTotal" type="total">
                <statLabel text="Total" />
                <statValue value="0" />
            </statCard>

            <statCard id="statCompleted" type="completed">
                <statLabel text="Completadas" />
                <statValue value="0" />
            </statCard>

            <statCard id="statPending" type="pending">
                <statLabel text="Pendientes" />
                <statValue value="0" />
            </statCard>
        </statsSection>

        <emptyStateMessage id="emptyStateMessage"
                           text="No tienes tareas registradas. Agrega tu primera tarea."
                           fontSize="13"
                           color="#777777"
                           marginTop="24" />
    </mainLayout>

</todoApp>
